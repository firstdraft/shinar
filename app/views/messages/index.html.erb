
<% content_for :title, "Messages" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Messages</h1>
  <%= link_to "New message", new_chat_message_path(@chat), class: "btn btn-primary" %>
</div>

<div id="messages" class="list-group">
  <% @messages.each do |message| %>
    <div class="list-group-item">
      <%= render message %>
      <%= link_to "Show this message", chat_message_path(@chat, message), class: "btn btn-sm btn-outline-primary mt-2" %>
    </div>
  <% end %>
</div>
