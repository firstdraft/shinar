<%= form_with(model: [chat, message], data: { controller: "autofocus autogrow", autogrow_submit_on_enter_value: true }) do |form| %>
  <div class="d-flex align-items-end gap-3">
    <div class="flex-grow-1">
      <%= form.label :content, class: "visually-hidden" %>
      <%= form.text_area :content,
                       class: "form-control #{'is-invalid' if message.errors[:content].any?}",
                       autofocus: true,
                       data: {
                         autogrow_target: "textarea",
                         action: "input->autogrow#update"
                       },
                       rows: 1 %>
      <% if message.errors[:content].any? %>
        <div class="text-danger">
          <%= message.errors[:content].first %>
        </div>
      <% end %>
    </div>
    <button type="submit" class="btn btn-primary rounded-circle d-flex justify-content-center align-items-center" style="width: 40px; height: 40px; padding: 0;">
      <i class="fas fa-arrow-up"></i>
    </button>
  </div>
<% end %>
