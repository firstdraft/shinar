<% content_for :title, "Edit Profile | Shinar" %>

<div class="d-flex align-items-center mb-4">
  <%= link_to :back, class: "btn btn-outline-secondary rounded-circle d-flex justify-content-center align-items-center me-3", style: "width: 40px; height: 40px; padding: 0;" do %>
    <i class="fas fa-arrow-left"></i>
  <% end %>
  <nav aria-label="breadcrumb" class="mb-0 me-auto">
    <ol class="breadcrumb mb-0">
      <li class="breadcrumb-item active" aria-current="page">Edit Profile</li>
    </ol>
  </nav>
</div>

<div class="row">
  <div class="col-md-8 col-lg-9">
    <div class="card mb-4">
      <div class="card-body">
        <%= render "form", user: @user %>

      <%= link_to chats_path, class: "d-none d-hotwire-native-block", data: {
        controller: "bridge--button",
            bridge_title: "Back",
            bridge_ios_image_name: "xmark",
            bridge_android_icon_name: "back"
            } do %>
        <i class="fas fa-qrcode me-1 fa-fw"></i> QR
      <% end %>
        
        <div class="text-center">
          <%= button_to sign_out_user_path(@user), method: :delete, class: "btn btn-link text-danger", data: { turbo_confirm: "Are you sure you want to sign out?" } do %>
            Sign Out
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
