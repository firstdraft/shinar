
<div class="card mb-4">
  <div class="card-header">
    <h4 class="card-title mb-0">User Profile</h4>
  </div>
  <div class="card-body">
    <%= render @user %>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to "Edit this user", edit_user_path(@user), class: "btn btn-sm btn-outline-primary" %>
  <%= link_to "Back to users", users_path, class: "btn btn-sm btn-outline-secondary" %>
  <%= button_to "Destroy this user", @user, method: :delete, class: "btn btn-sm btn-outline-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
</div>

<h4 class="mt-4 mb-3">Chats</h4>
<div class="list-group">
  <% @user.chats.each do |chat| %>
    <%= link_to chat, class: "list-group-item list-group-item-action" do %>
      <div class="d-flex justify-content-between">
        <h5 class="mb-1"><%= chat.subject %></h5>
        <small>ID: <%= chat.id %></small>
      </div>
      <small>Token: <%= chat.token %></small>
    <% end %>
  <% end %>
</div>
