<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <div class="row w-100">
      <div class="col-lg-10 offset-lg-1 d-flex justify-content-between align-items-center">
        <a class="navbar-brand d-flex align-items-center" href="/">
          <div class="me-2">
            <%= render partial: "shared/logo" %>
          </div>
          <span class="fw-bold fs-4" style="font-family: 'Cinzel', serif;">Shinar</span>
        </a>
        
        <% if current_user.present? %>
          <div class="dropdown mx-auto" data-controller="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle px-3 py-2" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="font-size: 1.1rem;">
              <span class="me-1" style="font-size: 1.2rem;"><%= current_user.preferred_language.icon %></span> <%= current_user.preferred_language.name_english %>
            </button>
            <ul class="dropdown-menu" aria-labelledby="languageDropdown" style="max-height: 300px; overflow-y: auto;">
              <% Language.all.order(:name_english).each do |language| %>
                <li>
                  <%= form_with(model: current_user, html: { class: "dropdown-item p-0" }) do |f| %>
                    <%= f.hidden_field :preferred_language_id, value: language.id %>
                    <button type="submit" class="dropdown-item <%= 'active' if current_user.preferred_language_id == language.id %>">
                      <%= language.icon %> <%= language.name_english %> (<%= language.name %>)
                    </button>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="d-flex align-items-center">
          <% if current_user.present? %>
            <%= link_to edit_user_path(current_user), class: "text-decoration-none text-secondary" do %>
              <i class="fa-regular fa-user me-1"></i> Profile
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>
