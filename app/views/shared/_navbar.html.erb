<nav class="navbar navbar-light bg-light">
  <div class="container">
    <!-- Brand -->
    <a class="navbar-brand d-flex align-items-center" href="/">
      <div class="me-2">
        <%= render partial: "shared/logo" %>
      </div>
      <span class="fs-4" style="font-family: 'Cinzel Decorative', serif;">SHINAR</span>
    </a>
    
    <!-- Middle section with language selector -->
    <% if current_user.present? %>
      <div class="d-flex">
        <%= form_with(model: current_user, html: { id: "navbar_language_form" }) do |f| %>
          <%= f.label :preferred_language_id, "Select language", class: "visually-hidden", for: "navbar_preferred_language" %>
          <%= f.collection_select :preferred_language_id,
            Language.all.order(:name_english),
            :id,
            :to_display,
            { selected: current_user.preferred_language_id },
            { 
              class: "form-select", 
              style: "width: 150px;",
              onchange: "this.form.submit()",
              id: "navbar_preferred_language"
            }
          %>
        <% end %>
      </div>
    <% end %>
    
    <!-- Profile link (icon only on mobile, icon+text on larger screens) -->
    <% if current_user.present? %>
      <%= link_to edit_user_path(current_user), class: "d-flex align-items-center text-decoration-none text-secondary" do %>
        <i class="fa-regular fa-user me-1"></i>
        <span class="d-none d-md-inline">Profile</span>
      <% end %>
    <% end %>
  </div>
</nav>
