<% content_for :title, "Chats" %>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Chats</li>
  </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Chats</h1>
  
  <%= button_to "New chat", chats_path, class: "btn btn-primary" %>
</div>

<div id="chats" class="list-group">
  <% @chats.each do |chat| %>
    <%= link_to chat, class: "list-group-item list-group-item-action" do %>
      <%= render chat %>
    <% end %>
  <% end %>
</div>
