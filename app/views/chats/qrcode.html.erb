<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">QR Code for <%= @chat.subject %></h5>
    <%= link_to "Back to Chat", chat_path(@chat), class: "btn btn-outline-secondary" %>
  </div>
  <div class="card-body text-center">
    <p>Scan this QR code to join the chat</p>
    <%= @qr.as_svg(module_size: 5, viewbox: true).html_safe %>
    <div class="mt-3">
      <p><small>Chat URL: <%= url_for(@chat) %></small></p>
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between">
    <%= link_to "Download PNG", qr_chat_path(@chat, format: :png), class: "btn btn-secondary" %>
    <%= link_to "Back to Chat", chat_path(@chat), class: "btn btn-primary" %>
  </div>
</div>