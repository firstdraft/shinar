<%= turbo_frame_tag "modal" do %>
  <div class="modal fade" tabindex="-1" id="turbo-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">QR Code for <%= @chat.subject %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center">
          <p>Scan this QR code to join the chat</p>
          <%= @qr.as_svg(module_size: 5, viewbox: true).html_safe %>
          <div class="mt-3">
            <p><small>Chat URL: <%= url_for(@chat) %></small></p>
          </div>
        </div>
        <div class="modal-footer justify-content-between">
          <%= link_to "Download PNG", qr_chat_path(@chat, format: :png), class: "btn btn-secondary" %>
          <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
<% end %>