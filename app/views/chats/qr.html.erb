<div class="d-flex justify-content-between align-items-center mb-3">
  <nav aria-label="breadcrumb" class="mb-0">
    <ol class="breadcrumb mb-0">
      <li class="breadcrumb-item"><a href="<%= chats_path %>">Chats</a></li>
      <li class="breadcrumb-item"><a href="<%= chat_path(@chat) %>"><%= @chat.subject %></a></li>
      <li class="breadcrumb-item active" aria-current="page">QR Code</li>
    </ol>
  </nav>
  <div class="d-flex gap-2">
    <%= link_to chat_path(@chat), class: "btn btn-outline-secondary rounded-circle d-flex justify-content-center align-items-center", style: "width: 40px; height: 40px; padding: 0;" do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <%= link_to qr_chat_path(@chat, format: :png), class: "btn btn-outline-secondary rounded-circle d-flex justify-content-center align-items-center", style: "width: 40px; height: 40px; padding: 0;" do %>
      <i class="fas fa-download"></i>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5 class="mb-0">QR Code for <%= @chat.subject %></h5>
  </div>
  <div class="card-body text-center">
    <p>Scan this QR code to join the chat</p>
    <%= @qr.as_svg(module_size: 5, viewbox: true).html_safe %>
    <div class="mt-3">
      <p><small>Chat URL: 
        <a href="<%= chat_url(@chat) %>"><%= chat_url(@chat) %></a>
        <button data-controller="clipboard" data-clipboard-text-value="<%= chat_url(@chat) %>" data-action="click->clipboard#copy" class="btn btn-sm btn-link p-0 ms-1" style="vertical-align: baseline;">
          <i class="fas fa-copy" style="font-size: 0.8rem;"></i>
        </button>
      </small></p>
    </div>
  </div>
</div>